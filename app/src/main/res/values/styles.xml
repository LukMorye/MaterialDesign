<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.Button.Filled"
        parent="Widget.AppCompat.Button">

        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">?attr/buttonHighlightColor</item>
        <item name="android:textColor">?attr/buttonTextInverseColor</item>
    </style>

</resources>
